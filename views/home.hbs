{{#if error}}
<div class="container my-5">
  <div class="row">
    <div class="col">
      <h1 class="text-center">Unknown error occurred</h1>
      <span class="d-block text-center">
        <a href="/?date={{date}}" class="link">Go to </a> last available "Astronomy Picture of the Day"
      </span>
    </div>
  </div>
</div>
{{else}}
<div class="container my-5">
  <div class="row">
    <div class="col">
      <h1 class="text-center">Astronomy Picture of the Day</h1>
      <span class="d-block text-center">{{date}}</span>
    </div>
  </div>
  <div class="row mt-2 d-fluid align-items-center justify-content-center">
    <div class="col-12 col-xl-8 col-lg-8 col-md-10  col-sm-12">
      <div class="w-100 text-center">
        {{#if apod_data.hdurl}}
          <img src="/images/{{ apod_data.hdurl }}" alt="{{ apod_data.title }}" class="img-fluid rounded">
        {{/if}}
        {{#if apod_data.isVideo}}
        <div class="video-container">
          <iframe src="{{apod_data.url}}">
          </iframe>
        </div>
        {{/if}}
        <h2 class="mt-4">{{ apod_data.title }}</h2>
        {{#if apod_data.copyright}}
        <span class="d-block"><strong>Copyright & Image credit: </strong> <span class="text-muted">{{apod_data.copyright}}</span></span>
        {{/if}}
        <span class="d-block mt-2">{{apod_data.explanation}}</span>
      </div>
    </div>
  </div>
</div>
{{/if}}